	%form{:method => "post", :action => "http://formspree.io/author@robertwmcgee.com"}
		.row.uniform
			.6u.12u
				%input#name{:type => "text", :name => "name", :placeholder => "Name"}
			.6u.12u
				%input#email{:type => "email", :name => "email", :placeholder => "Email Address"}
		.row.uniform
			.12u
				%input#subject{:type => "text", :name => "subject", :placeholder => "Subject"}
			.12u
				%textarea#message{:name => "message", :placeholder => "Enter your message"}
		.row.uniform
			.12u
				%ul.actions.align-center
					%li
						%input{:type => "submit", :value => "Send Message"}
